Package: coursekata
Title: Packages and Functions for CourseKata Courses
Version: 0.0.3
Authors@R: c(
    person("Adam", "Blake", email = "theadamattack@gmail.com", role = c("cre", "aut"), comment = c(ORCID = "0000-0001-7881-8652")),
